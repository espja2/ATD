<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.javi.atd.MainActivity"
    tools:deviceIds="wear_round">


    <EditText
        android:id="@+id/filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/toggleButton"
        android:layout_alignStart="@+id/toggleButton"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/filename"
        android:layout_centerHorizontal="true"
        android:text="Enter file name" />

    <ToggleButton
        android:id="@+id/toggleButton"
        style="@android:style/Widget.DeviceDefault.Light.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/space"
        android:layout_centerHorizontal="true"
        android:onClick="onToggleClicked"
        android:text="ToggleButton"
        android:textOff="Start recording"
        android:textOn="Stop recording" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_centerVertical="true"
        android:id="@+id/space" />

